@using Bgg.Net.Common.RequestHandlers.Collection
@using Bgg.Net.Common.RequestHandlers.Things
@inject ICollectionHandler _collectionHandler
@inject IThingHandler _thingHandler
@page "/collection"

<h3>Collection</h3>

<button @onclick="GetCollection">Get Collection</button>

<label>Number of Items: @Collection?.Items.Count()</label>

@{
    @if (Collection != null)
    {
        @foreach (var item in Collection?.Items)
        {
            <div class="card" style="width: 18rem;">

                <img class="card-img-top" src="@item.Image" alt="@item.Name" />
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                </div>
            </div>
        }
    }
}
