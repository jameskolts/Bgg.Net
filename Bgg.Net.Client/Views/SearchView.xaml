<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bgg.Net.Client.Views.SearchView">
    <StackLayout>
        <Frame x:Name="SearchFrame"
               IsVisible="{Binding Visible}"
               BackgroundColor="{Binding SearchFrameColor}"
               BorderColor="{Binding BorderColor}"
               CornerRadius="10"
               HasShadow="True"
               Margin="5">
            <StackLayout>
                <Label Text="I'm looking for:" FontSize="Small" FontAttributes="Bold" HorizontalTextAlignment="Start" TextColor="{Binding TextColor}"/>
                <SearchBar x:Name="SearchBar"
                           Placeholder="{Binding Placeholder}"
                           TextColor="{Binding TextColor}"
                           PlaceholderColor="{Binding TextColor}"
                           TextChanged="SearchBar_TextChanged"/>
            </StackLayout>            
        </Frame>
    </StackLayout>
</ContentView>