<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Bgg.Net.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Bgg.Net.Client"
    xmlns:Pages="clr-namespace:Bgg.Net.Client.Pages"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate Pages:Dashboard}"
        Route="dashboard" />

    <ShellContent
        Title="Collection"
        ContentTemplate="{DataTemplate Pages:Collection}"
        Route="collection" />

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate Pages:Logs}"
        Route="logs" />

</Shell>
